= render "shared/header"
- breadcrumb :mypage
= breadcrumbs separator: " &rsaquo; "
.main
  .contents
    = render "leftcontent"
    .rightContent
      %h2.listingsHeader 出品した商品
      %ul.listingsTab
        %li.tabItem
          = link_to "出品中", listings_user_path(current_user)
        %li.tabItem
          = link_to "取引中", in_progress_user_path(current_user)
        %li.tabItem.active
          = link_to "売却済", "#"
      - if @items.empty?
        %ul.itemNotFound
          %li.itemNotFound__text 売却済みの商品がありません
      - else
        %ul.itemLists
          = render partial: "users/item", collection: @items
= render "shared/banner"
= render "shared/footer"
= render "shared/purchaseBtn"
