= render "shared/header"
%nav.breadCrumbs
  %ul
    %li
      = link_to "メルカリ", root_path
    %li
      = fa_icon "angle-right"
    %li
      = link_to " マイページ", user_path(current_user)
    %li
      = fa_icon "angle-right"
    %li
      %p 出品した商品 - 出品中
.main
  .contents
    = render "users/leftcontent"
    .rightContent
      %h2.cardHeader クレジットカード情報入力
      .cardContent
        %form#card-form{action: "/cards", method: "POST"}
          .card_number
            .label_number
              %label カード番号
              %span.form-require 必須
            %input.number{maxlength: "16", name: "number", placeholder: "カード番号", type: "text",id: "payment_card_no"}/
          .card_cvc
            .label_cvc
              %label CVC
              %span.form-require 必須
            %input.cvc{maxlength: "3", name: "cvc", placeholder: "CVC", type: "text",id: "payment_card_security_code"}/
          .card_exp
            .label_exp
              %label 有効期限
              %span.form-require 必須
            .card_exp_month
              %select{name: "exp_month", id: "payment_card_expire_mm"}
                %option{value: ""} -
                %option{value: "1"} 1
                %option{value: "2"} 2
                %option{value: "3"} 3
                %option{value: "4"} 4
                %option{value: "5"} 5
                %option{value: "6"} 6
                %option{value: "7"} 7
                %option{value: "8"} 8
                %option{value: "9"} 9
                %option{value: "10"} 10
                %option{value: "11"} 11
                %option{value: "12"} 12
              月
            .card_exp_year
              %select{name: "exp_year", id: "payment_card_expire_yy"}
                %option{value: ""} -
                %option{value: "1980"} 1980
                %option{value: "1981"} 1981
                %option{value: "1982"} 1982
                %option{value: "1983"} 1983
